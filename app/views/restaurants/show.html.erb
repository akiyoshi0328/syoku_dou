<div class="col-md-10 offset-md-1 mt-5">
  <div class="row">
    <div>
      <% if @restaurant.images.attached? %>
        <% @restaurant.images.each do |image| %>
          <%= image_tag image %> 
        <% end %>
      <% end %>
    </div>
    <div class="col-md-8">
      <h2><%= @restaurant.name %></h2>
      <ul>
        <li><b>都道府県名: </b><%= @restaurant.prefecture.prefecture %></li>
        <li><b>住所: </b><%= @restaurant.municipalities %> <%= @restaurant.building_name %></li>
      </ul>
    </div>
  </div>
  <hr>
  <h4>商品の説明</h4>
</div>