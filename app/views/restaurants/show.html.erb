<div class="col-md-10 offset-md-1 mt-5">
  <div class="row">
    <% if @restaurant.images.attached? %>
      <% @restaurant.images.each do |image| %>
        <%= image_tag image.variant(resize: "300x300")%> 
      <% end %>
    <% else %>
      <%= image_tag "no_image.png"  %>
    <% end %>
    <div class="col-md-8">
      <h2><%= @restaurant.name %></h2>
      <ul>
        <li><b>都道府県名: </b><%= @restaurant.prefecture.prefecture %></li>
        <li><b>住所: </b><%= @restaurant.municipalities %> <%= @restaurant.building_name %></li>
      </ul>
    </div>
  </div>
  <hr>
  <h4>商品の説明</h4>

  <%= link_to "編集", edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
  <%= link_to "戻る", restaurants_path, class: "btn btn-secondary" %>
</div>