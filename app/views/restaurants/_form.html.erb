<%= form_with model: restaurant, local: true do |form| %>
  <div class="form-group">
    <%= form.label :images %>
    <%= form.file_field :images, class: "form-control" ,multiple: true %>
  </div>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :prefecture_id %>
    <%= form.collection_select(:prefecture_id, @prefectures, :id, :prefecture, {}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= form.label :municipalities %>
    <%= form.text_field :municipalities, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :building_name %>
    <%= form.text_field :building_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :opening_date %>
    <%= form.date_field :opening_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :business_hours %>
    <%= form.text_area :business_hours, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :regular_horiday %>
    <%= form.text_field :regular_horiday, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :homepage %>
    <%= form.text_field :homepage, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
  <%= link_to '戻る', :back, class: "btn btn-secondary" %>
<% end %>