<%= form_with model: book, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :prefecture %>
    <%= f.select :prefecture, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :municipalities %>
    <%= form.text_field :municipalities, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :building_name %>
    <%= form.text_field :building_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :municipalities %>
    <%= form.text_field :municipalities, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :opening_date %>
    <%= form.date_field :opening_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :business_hours %>
    <%= form.text_area :business_hours, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :regular_horiday %>
    <%= form.text_field :regular_horiday, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10, class: "form-control" %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
  <%= link_to '戻る', :back, class: "btn btn-secondary" %>
<% end %>